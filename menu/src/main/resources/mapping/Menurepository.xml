<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itauge.repository.Menurepository">
    <insert id="save">
        insert into t_menu values(null,#{name},#{price},#{flavor},null)
    </insert>
    <update id="update">
        update t_menu set name=#{name},price=#{price},flavor=#{flavor} where id = #{id}
    </update>
    <delete id="deleteById">
        delete from t_menu where id = #{id}
    </delete>

    <select id="findAll" resultType="com.itauge.entity.Menu">
        select * from t_menu limit #{param1},#{param2}
    </select>
    <select id="count" resultType="java.lang.Integer">
        select count(id) from t_menu
    </select>
    <select id="findById" resultType="com.itauge.entity.Menu">
        select * from t_menu where id = #{id}
    </select>
</mapper>